<% if(files) { %>
  <% files.forEach(function(file) {%>
  <div class="card mb-3">
    <div class="card-body">
      
        <img src="/image/<%= file.fileName %>" width="250" alt="" class="img-responsive">
        
        </div>
        <div class="card-header">
            <div class="card-title">
                    <%= file.caption %>
            </div>
        </div>
        <div>Uploaded on <%= file.createdAt.toLocaleString().split(' ').slice(0, 5).join(' ') %></div>
      <div class="card-footer">
          <form action="/image/<%= file._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Remove</button>
          </form>
          <a href="/image/<%=file._id%>/edit" class="btn btn-default btn-primary">Edit</a>
      </div>
      <br>
  </div>
  <%}) %>
  <% } else { %>
  <p>No files to show</p>
  <% } %>