<%- include ("../partials/header") %>


<div class="container">
  <div class="row">
    <div style="width:40%;margin:30px auto" >
      <h1>EDIT YOUR COMMENT!</h1>
      <form action="/image/<%= id %>/comments/<%= file._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input type = "text" name = "comment" placeholder = "Comment" style = "display: block; width: 100%;" class="form-control" value = "<%= file.text %>">
        </div> 
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn default btn-block">EDIT</button>
        </div>  
      </form>
    </div>
  </div>
</div>

